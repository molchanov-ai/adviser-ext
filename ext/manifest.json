{
  "manifest_version": 3,
  "name": "YouTube Video Info",
  "version": "1.0",
  "description": "Shows video information on hover",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js", "loading-bar.js"],
      "css": ["styles.css", "loading-bar.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

